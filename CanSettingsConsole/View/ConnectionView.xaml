<UserControl
    x:Class="CanSettingsConsole.View.ConnectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:CanSettingsConsole.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CanSettingsConsole.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="{Binding Controller.Name}" />
            <TextBlock Text="{Binding Controller.Sector}" />
            <TextBlock Text="{Binding Controller.Code}" />
        </StackPanel>
        <Controls:IpAddressTextBox
            Grid.Row="1"
            Width="167"
            Height="33"
            Margin="123,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" 
            Address="127.0.0.1"/>
    </Grid>

</UserControl>
